<!-- header -->
<div class="page-header">
  <h2><%= @task.description %>
  <%= link_to 'Edit', edit_project_task_path(@project, @task), :class => "btn btn-info pull-right" %>
  </h2>
<!-- breadcrumb -->
  <ol class="breadcrumb">
    <li><%= link_to "Projects", projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
      <li><%= link_to "Tasks", project_tasks_path %></li>
    <li class="active"><%= @task.description %></li>
  </ol>
</div>

    <!-- meta-info -->
  <div class="row">
    <div class="col-md-12">
      <p>
        <strong>Due:</strong>
          <% if @task.due_date %>
          <%= @task.due_date.strftime("%m/%d/%Y") %>
          <% else nil %>
          <%end%>
          </p>
          <p>
        <strong>Complete:</strong>
          <%= @task.complete %>
      </p>
    </div>
  </div>

  <!-- comment header -->
  <div class="row">
    <div class="col-md-12">
      <h1>Comments</h1>
    </div>
  </div>
  <!-- comment -->
  <% @task.comments.all.each do |comment| %>
  <div class="row">
    <div class="col-md-3">
      <% if comment.user_id %>
      <%= link_to comment.user.full_name, user_path(comment.user) %>
      <% else %>
      (deleted user)
      <% end %>
      <p class="text-muted"><%= time_ago_in_words(comment.created_at) %></p>
    </div>
    <div class="col-md-9">
      <%= comment.comment %>
    </div>
  </div>
  <% end %>



  <!-- comment form -->
  <div class="form-group row">
    <div class="col-md-offset-3 col-md-9">
    <%= form_for [@project, @task, @comment] do |f| %>
    <%= f.text_area :comment, class: "form-control" %>
    <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

  <% end %>
