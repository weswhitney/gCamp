<div class="page-header">
  <h1>Tasks
    <small>
      <div class="pull-right">
      <%= link_to "All", tasks_path %> |
      <%= link_to "Complete", tasks_path(sort_by: "complete") %>
      <%= link_to 'Create Task', new_task_path, :class => "btn btn-info" %>
      </div>
    </small>
  </h1>

</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td><%= task.due_date %></td>
        <td>
          <div class="pull-right">
            <%= link_to 'Show', task, :class => "btn btn-success" %>
            <%= link_to 'Edit', edit_task_path(task), :class => "btn btn-info" %>
            <%= link_to 'Destroy', task, :class => "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
