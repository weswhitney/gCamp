<div class="page-header">
  <h1>Tasks
    <small>
      <%= link_to 'Create Task', new_task_path, :class => "btn btn-info pull-right" %>
    </small>
  </h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task, :class => "btn btn-success pull-right" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), :class => "btn btn-info pull-right" %></td>
        <td><%= link_to 'Destroy', task, :class => "btn btn-warning pull-right", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
