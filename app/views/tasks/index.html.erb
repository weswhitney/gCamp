<div class="page-header">
  <h1>Task for <%= @project.name %>
    <small>
      <div class="pull-right">
      <%= link_to 'Create Task', new_project_task_path(@project), :class => "btn btn-info" %>
      </div>
    </small>
  </h1>
</div>

  <ol class="breadcrumb">
    <li><%= link_to "Projects", projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li class="active">Tasks</li>
  </ol>



<table class="table">
  <thead>
    <tr>
      <th><%= link_to 'Description', project_tasks_path(@project, sort_by: 'description', complete: params[:complete]) %></th>
      <th><%= link_to 'Complete', project_tasks_path(@project, sort_by: 'complete',complete: params[:complete]) %></th>
      <th><%= link_to 'Due', project_tasks_path(@project, sort_by: 'due_date', complete: params[:complete]) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td>
        <% if task.due_date %>
          <%= task.due_date.strftime("%m/%d/%Y") %>
          <% else nil %>
          <%end%>
        </td>
        <td>
          <div class="pull-right">
            <%= link_to 'Show', project_task_path(@project, task), :class => "btn btn-success" %>
            <%= link_to 'Edit', edit_project_task_path(@project, task), :class => "btn btn-info" %>
            <%= link_to 'Delete', project_task_path(@project, task), :class => "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
