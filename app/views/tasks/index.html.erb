<h1>hello</h1>
<% if notice %>
  <div class="alert alert-success text-center">
    <%= notice %>
  </div>
<% end %>

<div class="page-header">
  <h1>Tasks
    <small>
      <div class="pull-right">
      <%= link_to "All", tasks_path(complete: true) %> |
      <%= link_to "Incomplete", tasks_path %>
      <%= link_to 'Create Task', new_task_path, :class => "btn btn-info" %>
      </div>
    </small>
  </h1>

</div>

<table class="table">
  <thead>
    <tr>
      <th><%= link_to 'Description', tasks_path(sort_by: 'description', complete: params[:complete]) %></th>
      <th><%= link_to 'Complete', tasks_path(sort_by: 'complete',complete: params[:complete]) %></th>
      <th><%= link_to 'Due', tasks_path(sort_by: 'due_date', complete: params[:complete]) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.complete %></td>
        <td>
        <% if task.due_date %>
          <%= task.due_date.strftime("%m/%d/%Y") %>
          <% else nil %>
          <%end%>
        </td>
        <td>
          <div class="pull-right">
            <%= link_to 'Show', task, :class => "btn btn-success" %>
            <%= link_to 'Edit', edit_task_path(task), :class => "btn btn-info" %>
            <%= link_to 'Delete', task, :class => "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
