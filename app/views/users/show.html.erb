

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>
<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>
<p>
  <strong>Email:</strong>
  <%= mail_to @user.email %>
</p>
<p>
  <strong>Pivotal Token Tracker:</strong>
  <% if @user == current_user || current_user.admin %>
    <%="#{@user.pivotal_tracker_token[0..3]} #{@user.pivotal_tracker_token.from(4).gsub(/./,"*")}" %>
  <% end %>
</p>
<br>
<% if @user == current_user || current_user.admin %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
