<div class="page-header">
  <h2><%= title %></h2>
</div>

<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

<div class="form-group">
  <div class="col-md-offset-2 col-md-6">
    <%= render "shared/errors", instance: @user %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :first_name, class: "col-sm-2 label-control" %>
  <div class="col-sm-4">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :last_name, class: "col-sm-2 label-control" %>
  <div class="col-sm-4">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :email, class: "col-sm-2 label-control" %>
  <div class="col-sm-4">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :password, class: "col-sm-2 label-control" %>
  <div class="col-sm-4">
    <%= f.password_field :password, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :password_confirmation, class: "col-sm-2 label-control" %>
  <div class="col-sm-4">
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :pivotal_tracker_token, "Pivotal Tracker Token", class: "col-sm-2 label-control" %>
  <div class="col-sm-4">
    <%= f.text_field :pivotal_tracker_token, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-offset-2 col-sm-4">
    <div class="checkbox">
      <label>
        <%= f.check_box :admin %> Administrator
      </label>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-4">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>

<% end %>
