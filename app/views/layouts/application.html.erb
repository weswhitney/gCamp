<!DOCTYPE html>
<html lang="en">
<head>
  <%= stylesheet_link_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'application' %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>gCamp</title>
</head>
<body>
  <div class="navbar navbar-inverse" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      <%= link_to "gCamp", root_path, class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <form class="navbar-form navbar-right" role="form">
        </form>
      </div>
    </div>
  </div>

  <div class="container">

    <%= yield %>

    <footer>
      <div class="col-md-2">
      <%= link_to "about", about_path %> | <%= link_to "terms", terms_path %> | <%= link_to "faq", faq_path %> | <%= link_to "users", users_path %>
      </div>
      <div class="col-md-2 col-md-offset-8">
      <%= link_to "https://students.gschool.it/cohorts/3/students/95" do %>
        <%= image_tag("gschool-logo.png", width: "20em") %>
      <% end %> |
      <%= link_to "http://www.linkedin.com/pub/wesley-whitney/a5/aa4/442/" do %>
        <%= image_tag("linked_in.png", width: "20em") %>
      <% end %> |
      <%= link_to "https://github.com/weswhitney" do %>
        <%= image_tag("GitHub-Mark.png", width: "20em") %>
      <% end %> |
      <%= link_to "https://twitter.com/wes_whitney" do %>
        <%= image_tag("Twitter_logo_blue.png", width: "20em") %>
      <% end %> |
      </div>
    </footer>

  </div>
</body>
</html>
