<!DOCTYPE html>
  <html lang="en">
    <head>
      <title>gCamp</title>
      <%= stylesheet_link_tag 'application' %>
      <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body style= "padding-top: 100px">

      <!-- navigation bar -->
      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <%= link_to "gCamp", root_path, class: "navbar-brand" %>
            <ul class="nav navbar-nav pull-right">
             <% if !current_user %>
               <li><%= link_to "Sign Up", signup_path %></li>
               <li><%= link_to "Sign In", signin_path %></li>
             <% else %>
               <li><%= link_to current_user.full_name, user_path(current_user) %></li>
               <li><%= link_to "Sign Out", signout_path %></li>
             <% end %>
            </ul>
          </div>
        </div>
      </div>

      <!-- page content -->
      <div class="container">
        <% if notice != nil %>
          <div class="alert alert-success col-md-12 text-center">
            <%= notice %>
          </div>
        <% end %>
        <%= yield %>
      </div>

      <div class"row">
        <div class='col-md-12 footer-content'>
          <div class="container">
            <hr>
              <footer>
                <div class="col-md-6">
                  <%= link_to "about", about_path %>
                  |
                  <%= link_to "terms", terms_path %>
                  |
                  <%= link_to "faq", faq_path %>
                  |
                  <%= link_to "users", users_path %>
                  |
                  <%= link_to "projects", projects_path %>
                </div>
                <div class="col-md-6">
                  <div class="pull-right">
                    <%= link_to "https://students.gschool.it/cohorts/3/students/95" do %>
                      <%= image_tag("gschool-logo.png", width: "20em") %>
                    <% end %>
                    |
                    <%= link_to "http://www.linkedin.com/pub/wesley-whitney/a5/aa4/442/" do %>
                      <%= image_tag("linked_in.png", width: "20em") %>
                    <% end %>
                    |
                    <%= link_to "https://github.com/weswhitney" do %>
                      <%= image_tag("GitHub-Mark.png", width: "20em") %>
                    <% end %>
                    |
                    <%= link_to "https://twitter.com/wes_whitney" do %>
                      <%= image_tag("Twitter_logo_blue.png", width: "20em") %>
                    <% end %>
                    |
                  </div>
                </div>
              </footer>
            </hr>
          </div>
        </div>
      </div>
    </body>
  </html>
