<div class="page-header">
  <h1>Projects
    <small>
      <div class="pull-right">
        <%= link_to 'Create Project', new_project_path, :class => "btn btn-info" %>
      </div>
    </small>
  </h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project.name, project_path(project) %>
        </td>
        <td>
          <%= link_to 'edit', edit_project_path(project), :class => 'pull-right' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
