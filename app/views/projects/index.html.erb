<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Create Project', new_project_path, :class => "btn btn-info" %>
  </div>
  <h1>My Projects</h1>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Members</th>
      <th>Tasks</th>
      <th>
      </th>
    </tr>
  </thead>

  <tbody>
    <% current_user.projects.each do |project| %>
    <tr>
      <td>
        <%= link_to project.name, project_path(project) %>
      </td>
      <td>
        <%= link_to project.memberships.count, project_memberships_path(project) %>
      </td>
      <td>
        <%= link_to project.tasks.count, project_tasks_path(project) %>
      </td>
      <td>
        <%= link_to 'edit', edit_project_path(project), :class => 'pull-right' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

